{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "./src/**/*",
    "./plugins/**/*"
  ]
}
